---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <article class="post">
    <header class="post-header">
      <h1 class="post-title">{frontmatter.title}</h1>
      <p class="post-meta">
        Publicado em: 
        <time datetime={frontmatter.pubDate.toISOString()}>
          {frontmatter.pubDate.toLocaleDateString('pt-BR', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
      </p>
      <p class="post-description"><em>{frontmatter.description}</em></p>
    </header>
    
    <div class="post-content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .post {
    padding: 1rem 0;
  }

  .post-header {
    border-bottom: 1px solid #ccc;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
  }

  .post-title {
    font-size: 2.5rem;
    margin: 0;
    color: #333;
  }

  .post-meta {
    color: #666;
    font-size: 0.9rem;
    margin-top: 0.5rem;
  }

  .post-description {
    font-size: 1.2rem;
    color: #555;
    margin-top: 1rem;
  }

  .post-content {
    line-height: 1.7;
    font-size: 1.1rem;
  }

  .post-content :global(h2) {
    font-size: 1.8rem;
    margin-top: 2.5rem;
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  /* Dark Mode Styles */
  :global(html.dark) .post-title,
  :global(html.dark) .post-description {
    color: #f1f5f9;
  }

  :global(html.dark) .post-meta {
    color: #a0aec0;
  }

  :global(html.dark) .post-header {
    border-bottom-color: #4a5568;
  }
</style>